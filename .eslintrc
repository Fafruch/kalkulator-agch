{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    /* "airbnb", */
    "plugin:jest/recommended"
  ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "jest"
  ],
  "env": {
    "browser" : true,
    "jest/globals" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : "off",
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off",
    "no-trailing-spaces"   : "off",
    "padded-blocks"        : "off"
  }
}
